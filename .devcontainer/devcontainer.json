{
  "name": "Java",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "customizations": {
    "vscode": {
      "settings": {
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "[java]": {
          "editor.defaultFormatter": "redhat.java"
        }
      },
      "extensions": ["vscjava.vscode-java-pack", "Pivotal.vscode-boot-dev-pack"]
    }
  },
  "forwardPorts": [5432],
  "remoteUser": "vscode"
}
